<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <label>名前</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label>年齢</label>
    <%= f.number_field :age, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>アイコン</label>
    <p><%= image_tag set_image(@user.picture),
           alt: 'ユーザーアイコン', class: 'cover140', id: :user_picture_prev %></p>
    <p><%= f.file_field :picture, accept: "image/jpeg, image/png, image/gif", id: :user_picture %><p>

    <% if @user.picture.present? %>
      <p class="mt-2"><label><%= f.check_box :remove_picture, id: :remove_picture, class: "mr-1" %>画像を削除する</label></p>
    <% end %>
  </div>
    
  <div class="btn-toolbar mt-5">
    <div class="btn-group">
      <%= link_to "戻る", users_path, class: "btn btn-secondary" %>
    </div>

    <div class="btn-group ml-auto">
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
