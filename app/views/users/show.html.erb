<div class="input-container">
  <h1 class="mb-5">ユーザー詳細</h1>

  <p>名前：<%= @user.name %></p>
  <p>メールアドレス：<%= @user.email %></p>
  <p>住所：<%= @user.address %></p>
  <p>年齢：<%= @user.age %>歳</p>

  <div class="btn-toolbar">
    <div class="btn-group">
      <%= link_to "戻る", users_path, class: "btn btn-secondary" %>
    </div>

    <div class="btn-group ml-auto">
      <td><%= link_to "削除", @user, method: :delete, data: { confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %></td>
    </div>
  </div>
</div><!-- input-container -->
